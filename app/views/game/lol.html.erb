<div class="container-fluid">
  <header class="header">
    <%= image_tag("logo.png",alt: "Logo")%>
  </header>
  <div class="panel panel-default">
    <div class="panel-heading">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header"><%= link_to "Epic Moba Steam", {controller: "home", action: "index"},class:"navbar-brand navbar-link"%>
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"></button>
          </div>
          <div class="collapse navbar-collapse" id="navcol-1">
            <ul class="nav navbar-nav">
              <li class="active" role="presentation"><%= link_to "Inicio", {controller: "home", action: "index"}%></li>
              <li role="presentation">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Juegos <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <% @items[0].each do |game|%>
                    <% case game.name %>
                  <% when "League of Legends" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "lol"} %></li>

                    <% when "Dota 2" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "dota2"} %></li>
                    <% when "Heroes of the Storm" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "hots"} %></li>
                    <% else %>
                    <% end %>
                  <% end %>
                  <!-- Aquí hay que añadir el link del juego,una de dos o por modelado dela base de datos o haciendo un
                    game/1 en el cual 1 es id del juego
                    -->
                </ul>
              </li>
              <li role="presentation"><%= link_to "Contacto", {controller: "home", action: "index"}%> </li>
              <li role="presentation"><%= link_to "Administración", {controller: "home", action: "index"}%></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="panel-body">
      <div class="body-content">
        <div class="body-header">
          <p class="text-center"><img src="assets/img/lol_logo.png" alt="logo lol"></p>
        </div>
        <div class="title"><p class="lead">Torneos</p></div>
        <div class="separator"></div>
          <div class="row">
            <% @items[1].each do |item| %>
            <div class="col-sm-4">
              <div class='streamer'>
                <div class='streamName'>
                  <a class="link" href="tournament.html" target="_self"><p class='lead'><%= item.twitch_username %></p></a>
                </div>
                <div class='miniature'>
                  <a class="link" href="tournament.html" target="_self"><img class='img-fluid' alt='miniatura' src='assets/img/live_final_lol.png'></a>
                </div>
                <p class='stream-info'><strong>LVPes</strong> con <strong>1,002,234</strong> espectadores</p>
                <p class='stream-info'><strong><%= link_to @items[4][0].red_team.name %></strong> vs<strong><%= link_to @items[4][0].blue_team.name %></strong></p>
              </div>
            </div>
            <% end %>
          </div>


        <div class="title"><p class="lead">Jugadores profesionales</p></div>
        <div class="separator"></div>

        <div class="row">
          <% @items[2].each do |item| %>
            <div class="col-sm-4">
              <div class='streamer'>
                <div class='streamName'>
                  <a class="link" href="streamer.html" target="_self"><p class='lead'><%= item.twitch_username %></p></a>
                </div>
                <div class='miniature'>
                  <a href="streamer.html" target="_self"><img class='img-fluid' alt='miniatura' src='assets/img/live_user_stray228-320x180.jpg'></a>
                </div>
                <p class='stream-info'><strong><%= item.twitch_username %></strong> con <strong>441,213</strong> espectadores</p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="title"><p class="lead">Streamers emergentes</p></div>
        <div class="separator"></div>
        <div class="row">
          <% @items[3].each do |item| %>
            <div class="col-sm-4">
              <div class='streamer'>
                <div class='streamName'>
                  <a class="link" href="streamer.html" target="_self"><p class='lead'><%= item.twitch_username %></p></a>
                </div>
                <div class='miniature'>
                  <a class="link" href="streamer.html" target="_self"><img class='img-fluid' alt='miniatura' src='assets/img/live_user_logiiyt-320x180.jpg'></a>
                </div>
                <p class='stream-info'><strong><%= item.twitch_username %></strong> con <strong>1,257</strong> espectadores</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
