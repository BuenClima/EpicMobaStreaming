<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :twitchChannel %>
    <%= form.text_field :twitchChannel, id: :contact_twitchChannel %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message, id: :contact_message %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.number_field :gender, id: :contact_gender %>
  </div>

  <div class="field">
    <%= form.label :dateToPlay %>
    <%= form.datetime_select :dateToPlay, id: :contact_dateToPlay %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
