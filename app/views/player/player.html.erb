<div class="body-header text-center">
  <div class="row">
    <div class="col-md-6">
      <p class="lead">
        <%= image_tag(@player.image, alt: 'foto player', class: 'img-circle', height: '60') %><strong><%= @player.name%></strong>
      </p>
    </div>
    <div class="col-md-6">
      <p class="lead"><strong>Equipo:</strong> <%= link_to(image_tag(@player.team.image, alt: 'foto equipo', height: '60'), {controller: 'team', action: 'team', id: @player.team.id}) %></p>
    </div>
  </div>
</div>
<div class="separator"></div>
<br>
<p class="lead"><strong>Biografía</strong></p>
<p><%= @player.biography %></p>
<br>
<p class="lead"><span class="titulillo">Información del jugador</span></p>
<br>
<div class="row">
  <div class="col-md-3">
    <p class="lead">Posición: <%= @player.position %></p>
  </div>
  <div class="col-md-3">
    <p class="lead">KDA Ratio: <%= @kdaRatio %></p>
  </div>
  <div class="col-md-3">
    <p class="lead">CS Per Min: <%= @csPerMin %></p>
  </div>
  <div class="col-md-3">
    <p class="lead">Kill Participation: <%= @killParticipation %></p>
  </div>
</div>
<br>
<p class="lead">Campeones más jugados</p>
<table class="table">
  <thead>
  <th></th>
  <th>Campeón</th>
  <th>Winrate</th>
  <th>Pickrate</th>
  <th>KDA</th>
  </thead>
  <tbody>
  <% @playerPick.each do |each| %>
    <tr>
      <td><%= image_tag(each.champion.image, width: '80', class: 'img-circle', alt: 'campeon') %></td>
      <td><%= each.champion.name %></td>
      <td><%= each.win_rate %></td>
      <td><%= each.pick_rate %></td>
      <td><%= each.kda %></td>
    </tr>
  <% end %>
  </tbody>
</table>