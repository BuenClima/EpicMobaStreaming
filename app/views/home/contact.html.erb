<div class="container-fluid">
  <header class="header">
    <%= image_tag("logo.png",alt: "Logo")%>
  </header>

  <div class="panel panel-default">
    <div class="panel-heading">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header"><%= link_to "Epic Moba Steam", {controller: "home", action: "index"},class:"navbar-brand navbar-link"%>
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"></button>
          </div>
          <div class="collapse navbar-collapse" id="navcol-1">
            <ul class="nav navbar-nav">
              <li class="active" role="presentation"><%= link_to "Inicio", {controller: "home", action: "index"}%></li>
              <li role="presentation">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Juegos <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <% @games.each do |game|%>
                    <% case game.name %>
                  <% when "League of Legends" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "lol"} %></li>

                    <% when "Dota 2" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "dota2"} %></li>
                    <% when "Heroes of the Storm" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "hots"} %></li>
                    <% else %>
                    <% end %>
                  <% end %>
                  <!-- Aquí hay que añadir el link del juego,una de dos o por modelado dela base de datos o haciendo un
                    game/1 en el cual 1 es id del juego
                    -->
                </ul>
              </li>
              <li role="presentation"><%= link_to "Contacto", {controller: "home", action: "contact"}%> </li>
              <li role="presentation"><%= link_to "Administración", {controller: "home", action: "index"}%></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="panel-body">
      <div class="body-content">
        <form class="container" id="form">
          <div class="message alert alert-success" role="alert">Gracias por contactar con nosotros!</div>
          <p class="lead">Formulario de contacto</p>
          <div class="feedbackmessage" role="alert"></div>
          <div class="form-group">
            <label for="inputName">Canal de twitch.tv</label>
            <input type="text" class="form-control" id="inputName" placeholder="Canal de twitch" required>
          </div>
          <div class="form-group">
            <label for="inputEmail">Email de Contacto</label>
            <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Email" required>
          </div>
          <div class="form-group">
            <label for="inputText">Mensaje</label>
            <textarea id="inputText" form="form" class="formTextArea form-control">Texto explicativo</textarea>
          </div>
          <a href="#" class="btn btn-md btn-primary" onclick="succesMessage()">Contactar</a>
        </form>
      </div>
    </div>
  </div>
</div>