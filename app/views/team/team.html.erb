<div class="container-fluid">
  <header class="header">
    <%= image_tag("logo.png",alt: "Logo")%>
  </header>
  <div class="panel panel-default">
    <div class="panel-heading">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header"><%= link_to "Epic Moba Steam", {controller: "home", action: "index"},class:"navbar-brand navbar-link"%>
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"></button>
          </div>
          <div class="collapse navbar-collapse" id="navcol-1">
            <ul class="nav navbar-nav">
              <li class="active" role="presentation"><%= link_to "Inicio", {controller: "home", action: "index"}%></li>
              <li role="presentation">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Juegos <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <% @items[0].each do |game|%>
                    <% case game.name %>
                  <% when "League of Legends" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "lol"} %></li>

                    <% when "Dota 2" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "dota2"} %></li>
                    <% when "Heroes of the Storm" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "hots"} %></li>
                    <% else %>
                    <% end %>
                  <% end %>
                  <!-- Aquí hay que añadir el link del juego,una de dos o por modelado dela base de datos o haciendo un
                    game/1 en el cual 1 es id del juego
                    -->
                </ul>
              </li>
              <li role="presentation"><%= link_to "Contacto", {controller: "home", action: "index"}%> </li>
              <li role="presentation"><%= link_to "Administración", {controller: "home", action: "index"}%></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="panel-body">
      <div class="body-content">
        <div class="body-header">
          <p class="text-center"><img src="assets/img/lol_logo.png" alt="Logo team"></p>
        </div>
        <div class="title"><p class="lead">Team <%= @team.name %></p></div>
        <div class="separator"></div>
        <p class="lead">Explicacion del equipo</p>
        <div class="row">
          <% @player_details.each do |item| %>
            <div class="col-sm-4">
              <div class='streamer'>
                <div class='streamName'>
                  <a class="link" href="tournament.html" target="_self"><p class='lead'><%= link_to item[0].nick,{controller: "players", action: "show"}, id: item[0].id %></p></a>
                </div>
                <div class='miniature'>
                  <%= image_tag("logo.png", class: 'img-fluid') %></a>
                </div>
                <% champions = "" %>
                <% win_rates= "" %>
                <% pick_rates= "" %>
                <% item[1].each do |player_pick| %>
                  <% champions += player_pick.champion.name+", "%>
                  <% win_rates += player_pick.win_rate.to_s+", "%>
                  <% pick_rates += player_pick.pick_rate.to_s+", "%>
                <% end %>
                <p class='stream-info'><strong>Nombre </strong><%= item[0].name %><strong> Apellido </strong><%= item[0].lastname %></p>
                <p class='stream-info'><strong>Campeones </strong>más usados <strong><%= champions.chomp(', ') %></strong></p>
                <p class='stream-info'><strong>Campeones </strong>más usados <strong><%= champions.chomp(', ') %></strong></p>
                <p class='stream-info'><strong>Win Rates </strong>con los campeones <strong><%= win_rates.chomp(', ') %></strong></p>
                <p class='stream-info'><strong>Pick Rates </strong>con los campeones <strong><%= pick_rates.chomp(', ') %></strong></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

