<div class="container-fluid">
  <header class="header">
    <%= image_tag("logo.png",alt: "Logo")%>
  </header>
  <div class="panel panel-default">
    <div class="panel-heading">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header"><%= link_to "Epic Moba Steam", {controller: "home", action: "index"},class:"navbar-brand navbar-link"%>
            <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"></button>
          </div>
          <div class="collapse navbar-collapse" id="navcol-1">
            <ul class="nav navbar-nav">
              <li role="presentation"><%= link_to "Inicio", {controller: "home", action: "index"}%></li>
              <li role="presentation">
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Juegos <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <% @items[0].each do |game|%>
                    <% case game.name %>
                  <% when "League of Legends" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "lol"} %></li>
                    <% when "Dota 2" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "dota2"} %></li>
                    <% when "Heroes of the Storm" %>
                      <li role="presentation"><%= link_to game.name, {controller: "game",action: "hots"} %></li>
                    <% else %>
                    <% end %>
                  <% end %>
                </ul>
              </li>
              <li role="presentation"><%= link_to "Contacto", {controller: "home", action: "index"}%> </li>
              <li role="presentation"><%= link_to "Administración", {controller: "home", action: "index"}%></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="panel-body">
      <div class="body-content">
        <div class="body-header text-center">
          <p class="lead">
            <strong>Equipo:</strong> <%= @team.name %> <%= image_tag(@team.image, alt: 'logo team') %>
          </p>
        </div>
        <div class="separator"></div>
        <div class="title">
          <p class="lead">Overview</p>
          <p><%= @team.description %></p>
          <p>
            <strong>Coach:</strong> <%= @team.coach %>
          </p>
        </div>
        <div class="title"><p class="lead">Roster del equipo</p></div>
        <table class="table">
          <thead>
          <th>Foto</th>
          <th>Alias</th>
          <th>Nombre</th>
          <th>Posición</th>
          </thead>
          <tbody>
          <% @items[1].each do |player| %>
            <tr>
              <td><%= image_tag(player.image, alt: 'player image', class: 'img-circle') %></td>
              <td><%= link_to player.name, { controller: "player", action: "player", id: player}, class: 'link' %></td>
              <td><%= player.name %></td>
              <td><%= player.position %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>

